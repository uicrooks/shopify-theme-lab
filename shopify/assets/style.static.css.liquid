/* Global level styling */
a {
  color: inherit;
  text-decoration: none;
}

a:hover {
  color: inherit;
  text-decoration: none;
}

.hidden {
  display: none;
}

/* Layout specific styling */

@media (min-width: 576px) {
  #login-form, #register-form, #password-recovery-form, #password-reset-form {
    max-width: 420px;
    margin: auto;
  }
}

/* Page specific - login.liquid */

.login-page-container {
  background-color: #f6f5f3;
  padding: 35px 0;
  text-align: center;
  font-family: "adrianna", arial;
  font-size: 14px;
  color: #5a3714;
}

.login-page-title {
  font-family: "worker-3d", arial;
  font-size: 25px;
  margin-bottom: 35px;
  color: #1a110c;
}

.login-page-link {
  padding: 4px 14px;
  font-family: "adrianna", arial;
  font-size: 14px;
  text-decoration: none;
}

.login-page-link:hover {
  color: inherit;
  text-decoration: none;
}

.active-link { 
  background-color: #cc6328;
  color: #fff;
}

.active-link:hover {
  background-color: #cc6328;
  color: #fff;
}

.inactive-link {
  color: #cc6328;
}

.inactive-link:hover { 
  color: #cc6328;
}

.login-text {
  width: 90%;
  margin: 25px auto;
}

.form-field-wrapper {
  width: 90%;
  margin: 0 auto 10px;
}

.form-field-wrapper.checkbox {
  display: flex;
  flex-flow: row nowrap;
  text-align: left;
  font-size: 12px;
  line-height: 14px;
  color: inherit;
  margin: 0 auto 20px;
}

.form-field {
  width: 100%;
  padding: 8px 10px;
  border: 2px solid #f6f5f3;
  border-radius: 5px;
  color: #1a110c;
  font-family: "adrianna", arial;
  font-size: 14px;
  line-height: 1.3;
}

.form-field-checkbox {
  margin-right: 5px;
}

.form-field:focus {
  border: 2px solid #bca887;
}

.form-submit-wrapper {
  width: 90%;
  margin: auto;
  text-align: right;
}

.submit-button{
  width: 100%;
  padding: 14px 12px 10px;
  border-radius: 5px;
  border: none;
  background-color: #cc6328;
  color: #fff;
  font-family: "worker-3d", arial;
  font-size: 16px;
}

.submit-button:hover {
  background-color: #e0a17e;
}

.password-recovery-link { 
  font-style: italic;
  color: #cc6328;
}

.password-recovery-link:hover {
  color: #cc6328;
}

.form-errors {
  width: 90%;
  margin: 25px auto;
  color: red;
  text-align: left;
}

