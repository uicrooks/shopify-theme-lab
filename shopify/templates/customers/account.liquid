{% assign subsCollection = collections['refactor-all-subscriptions'] %}
{% assign subOptionsCollection = collections['subscription-flow-scents'] %}

<div class="account-page-container">
  <account
    :subscription-products="{{ subsCollection.products | json | replace: '"', "'" }}"
    :subscription-options="{{ subOptionsCollection.products | json | replace: '"', "'" }}"
    :user="{
      id: '{{ customer.id }}',
      tags: {{ customer.tags | json | replace: '"', "'" }},
      firstName: '{{ customer.first_name }}',
      lastName: '{{ customer.last_name }}',
      email: '{{ customer.email }}'
    }"
  >
    <template #recent-orders>
      {% render "account-recent-orders" %}
    </template>
    <template #order-history>
      {% render "account-vue-order-history" %}
    </template>
  </account>
</div>
