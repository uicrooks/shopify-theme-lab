  font-size: 24px;
  font-weight: 700;
  text-align: center;
  margin-bottom: 10px;
}

.shopify-theme-lab__subline {
  font-size: 16px;
  font-weight: 700;
}

.shopify-theme-lab__text {
  font-size: 18px;
  text-align: center;
  margin-bottom: 40px;
}

.shopify-theme-lab__examples {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 40px;
}

