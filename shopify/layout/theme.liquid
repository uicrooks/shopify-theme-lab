<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="preload" href="{{ 'bundle.js' | asset_url }}" as="script">

    <title>{{ page_title | escape }}</title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}
    
    {% if content_for_header contains "previewBarInjector.init();" %}
    {% elsif content_for_header contains "Shopify.designMode" %}
    {% else %}
      <link rel="preload" href="{{ 'bundle.css' | asset_url }}" as="style">
      {% comment %}Live!{% endcomment %}
      {{ 'bundle.css' | asset_url | stylesheet_tag }}
    {% endif %}

    {{ content_for_header }}
  </head>

  <body id="{{ page_title | handle }}" class="template-{{ request.page_type | handle }}">
    <div {% unless request.page_type == 'captcha' %}id="app"{% endunless %}>
      {% section 'header' %}

      <main id="main" role="main">
        {{ content_for_layout }}
      </main>

      {% section 'footer' %}
    </div>

    <!-- webpack bundle -->
    {{ 'bundle.js' | asset_url | script_tag }}
  </body>
</html>