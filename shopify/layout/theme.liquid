<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="google-site-verification" content='{{"google716dea4c6d410cfc.static.html" | asset_url }}'>
    {% render "_head.og-meta" %}

    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="preload" href="{{ 'bundle.css' | asset_url }}" as="style">
    <!--<link rel="preload" href="{{ 'main.js' | asset_url }}" as="script">-->
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="shortcut icon" href="{{ settings.favicon_image | img_url: '32x32' }}" type="image/png">

    {% render "_head.seo" %}
    {{ 'bundle.css' | asset_url | stylesheet_tag }}

    {{ content_for_header }}
  </head>

  <body id="{{ page_title | handle }}" class="template-{{ request.page_type | handle }}">
    <div {% unless request.page_type == 'captcha' %}id="app"{% endunless %}>

      <main id="main" role="main">
        <app-theme-header></app-theme-header>
        <div class="inner-container">
          {% comment %}Route Specific Content{% endcomment %}
          {{ content_for_layout }}
        </div>
      </main>

      <app-theme-footer></app-theme-footer>
    </div>

    <!-- webpack bundle -->
    {{ 'bundle.js' | asset_url | script_tag }}
    {% comment %}
    {{ 'layout-index.js' | asset_url | script_tag }}
    {% endcomment %}
    {% render '_body.crawler-schema' %}
    {% render '_body.live-chat' %}
  </body>
</html>